@model List<CarDatingSite.Models.BlogsForIndex>

<div class="container">
    <div class="row">
        @Html.ActionLink("Pievienot jaunu ierakstu", "AddBlog", "Blogs", htmlAttributes: new { @class = "btn btn-info", role = "button" })
    </div>
</div>


<!-- kad vēlamies izsaukt C# kodu, lietojam at simbolu -->
@foreach (var blog in Model)
{
    <div class="row">
        <div class="col-md-12">

            <h2>Cat name: @blog.BlogName</h2>
            <p> Email : @blog.BlogCreatorEmail</p>
            <p> Title : @blog.BlogTitle</p>
            <p>Blog message :@blog.BlogText</p>
            <p>Created : @blog.BlogCreated</p>
            <p>Modify: @blog.BlogModified</p>
            <img src="@blog.BlogImage" class="img-responsive" />
            <p>
                @Html.ActionLink("Rediģēt ierakstu", "EditBlog", "Blogs", new { editableBlogId = blog.BlogId }, htmlAttributes: new { @class = "btn btn-info", role = "button" })
                @Html.ActionLink("Nodzēst ierakstu", "DeleteBlog", "Blogs", new { deletableBlogId = blog.BlogId }, htmlAttributes: new { @class = "btn btn-info", role = "button" })
            </p>
        </div>
    </div>
}
